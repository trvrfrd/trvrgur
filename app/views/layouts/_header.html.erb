<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "trvrgur", root_url, :id => "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if current_user.nil? %>
            <li><%= link_to "sign in", new_session_url %></li>
            <li><%= link_to "sign up", new_user_url %></li>
          <% else %>
            <li><%= link_to current_user.username, user_url(current_user) %></li>
            <li><%= link_to "sign out", session_url, :method => :delete %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>