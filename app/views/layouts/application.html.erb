<!DOCTYPE html>
<html>
<head>
  <title>trvrgur</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render "layouts/header" %>

<div class="center">
  <% flash[:alerts].try(:each) do |alert| %>
    <h4 style="color:red"><%= alert %></h4>
  <% end %>

  <% flash[:notices].try(:each) do |notice| %>
    <h4 style="color:green"><%= notice %></h4>
  <% end %>
</div>

<div id="content">
  <%= yield %>
</div>

</body>
</html>
