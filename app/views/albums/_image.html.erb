<% id = image.id || i %>

<% if image.persisted? %>
  <img src="<%= image.file.url(:small) %>">
  <input type="checkbox" 
    name="images[<%= id %>][_destroy]" 
    id ="image_destroy"
    value="true">
  <label for="image_destroy">delete image?</label> 
  <br>
<% else %>
  <input type="file" name="images[<%= id %>][file]" id="image_file">
  <br>
<% end %>

<input
  type="text" 
  name="images[<%= id %>][title]" 
  id="image_title"
  value="<%= image.title %>">
<label for="image_title">image title (optional)</label>

<br>

<textarea 
  name="images[<%= id %>][description]" 
  id="image_description"
  rows="4"
  cols="40"><%= image.description %></textarea>
<label for="image_description">image description (optional)</label>

<br>
<br>