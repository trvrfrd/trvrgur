<input type="file" name="images[<%= image.id || i %>][file]" id="image_file">
<br>

<input
  type="text" 
  name="images[<%= image.id || i %>][title]" 
  id="image_title"
  value="<%= image.title %>">
<label for="image_title">image title (optional)</label>

<br>

<textarea 
  name="images[<%= image.id || i %>][description]" 
  id="image_description"
  rows="4"
  cols="40"><%= image.description %></textarea>
<label for="image_description">image description (optional)</label>

<br>
