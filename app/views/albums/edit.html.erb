<h1>edit album</h1>

<%= render "form", :album => @album %>

<br>
<form action="<%= album_url(@album) %>" method="POST">
  <input type="hidden" name="_method" value="DELETE">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  <input type="submit" class="btn btn-danger" value="delete album (and all images therein)">
</form>
