<h1>all albums</h1>

<div style="max-width:600px">
  <!-- sort albums by points descending FOR NOW -->
  <% @albums.sort { |a, b| b.points <=> a.points }.each do |album| %>
    <a href="<%= album_url(album) %>">
      <img src="<%= album.images.first.file.url(:small) %>">
    </a>
  <% end %>
</div>
