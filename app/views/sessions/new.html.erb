<div class="col-md-4 col-md-offset-4">
  <div class="container">

    <form class="form-signin" action="<%= session_url %>" method="POST">
    <h1 class="form-signin-heading center">sign in</h1>

      <input 
        type="hidden" 
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <input type="text" class="form-control" name="identity" id="identity">
      <label for="identity">username or email</label>

      <br>

      <input type="password" class="form-control" name="password" id="password">
      <label for="password">password</label>

      <br>
      <div class="center">
        <input type="submit" class="btn btn-primary form-control" value="sign in">
      </div>

    </form>
    <br>

    <p class="center">new here? <a href="<%= new_user_url %>">sign up</a></p>
  </div>
</div>